<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance.Subhead.Bold" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.SubTitle" parent="AppTheme.Text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:fontFamily">@fonts/blogger_sans_light.otf</item>
    </style>

    <style name="AppTheme.Text">
        <item name="android:textColor">@color/grey_80</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@fonts/blogger_sans_medium.otf</item>
        <item name="android:letterSpacing">0.075</item>
    </style>

    <style name="AppTheme.Time.Shadow" parent="AppTheme.Time">
        <item name="android:shadowColor">@color/grey_80</item>
        <item name="android:shadowDx">-2</item>
    </style>

    <style name="AppTheme.Time">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:shadowColor">@android:color/white</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textColor">#E56717</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="EditText.Flat.Grey" parent="@style/AppTheme">
        <item name="android:textColorHint">@color/grey_40</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Subhead</item>
        <item name="android:textColor">@color/grey_90</item>
    </style>

    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#80FFFFFF</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>

    <style name="EditText.White" parent="@style/AppTheme">
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="colorControlNormal">@color/grey_20</item>
    </style>

</resources>
